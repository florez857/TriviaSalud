<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roottrivia"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@drawable/back"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:layout_height="match_parent">

        <!--            android:visibility="invisible"-->


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_default"
            app:cardElevation="15dp"
            app:cardMaxElevation="16dp"
            app:layout_constraintBottom_toTopOf="@+id/materialCardView32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:elegantTextHeight="true"
                android:fontFamily="@font/montserrat"
                android:gravity="center|center_horizontal|center_vertical"
                android:minEms="5"
                android:minLines="4"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="¿Por qué lo usamos? Es un hecho establecido desde  que hace que parezca un inglés legible. Muchos paquetes de edición de escritorio y editores de páginas "
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="15dp"
            app:cardMaxElevation="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constaint"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:minLines="2"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="8dp"
                    android:text="Seleccione la opción que considere correcta :"

                    android:textAlignment="center"
                    android:textSize="14sp"
                    app:autoSizeMinTextSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/colorAccent"
                    android:elegantTextHeight="true"
                    android:elevation="8dp"
                    android:fontFamily="@font/montserrat"
                    android:minLines="2"
                    android:padding="10dp"
                    android:text="Es un hecho establecido desde hace mucho tiempo que un lector, en lugar de usar"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/colorSecondaryVariant"
                    android:elegantTextHeight="true"
                    android:elevation="8dp"
                    android:fontFamily="@font/montserrat"
                    android:minLines="2"
                    android:padding="10dp"
                    android:text="Es un hecho establecido desde hace mucho tiempo que un lector  Ipsum es que tiene una distribución "
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="5dp"
                    app:layout_constraintBottom_toTopOf="@+id/materialButton3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialButton1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="?attr/colorPrimaryVariant"
                    android:backgroundTint="@color/colorPrimary"
                    android:elegantTextHeight="true"
                    android:elevation="8dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:minLines="2"
                    android:padding="10dp"
                    android:text="Es un hecho establecido desde hace mucho tiempo que un lector se distraerá con el contenido "
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>